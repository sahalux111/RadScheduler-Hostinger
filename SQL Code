CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50),
    password VARCHAR(50),  -- Plaintext password for simplicity (NOT recommended in production)
    role ENUM('admin', 'doctor', 'qa_radiographer')
);

CREATE TABLE availability (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    start_time DATETIME,
    end_time DATETIME,
    FOREIGN KEY (user_id) REFERENCES users(id)
);

CREATE TABLE breaks (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    break_start DATETIME,
    break_end DATETIME,
    FOREIGN KEY (user_id) REFERENCES users(id)
);

CREATE TABLE notes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT,
    note TEXT,
    created_by INT,  -- Admin or QA who added the note
    FOREIGN KEY (user_id) REFERENCES users(id),
    FOREIGN KEY (created_by) REFERENCES users(id)
);
